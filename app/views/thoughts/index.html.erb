<% content_for :main do %>

	<div id="thoughts">

		<div id="thoughts-top">
			<button id="add-thought-button" class="btn btn-inverse">Add Thought</button>
			<button id="sort-by-id" class="btn btn-inverse">Sort by ID</button>
			<!-- <button id="sort-by-length" class="btn btn-inverse">Sort by length</button> -->
			<button id="shuffle" class="btn btn-inverse">Shuffle!</button>
			<div class="link-to-github">Developed using Backbone.js and Isotope. Check it out on<span class="icon-font"><a href="https://github.com/roger-kang-mo/randomjunk/" target="_blank">Ä½</a></span></div>
		</div>

		<div id="thoughts-area">
			
		</div>


		<div id="add-thought-modal">
			
			<div id="thought-input">
				<!-- <input type="text" id="thought-secret"></input> -->
				<textarea type="text" id="new-thought" maxlength='700' cols="200" rows="5" placeholder="Thoughts?"></textarea><br>

				<button class="btn btn-inverse" id="save-thought">Save</button>&nbsp;
				<button class="btn btn-inverse" id="close-thought-modal">Close</button>
				<!-- send in the thought for approval -->

			</div>

		</div>

		<div id="comment-modal">
			<div id="comments-area">
				<ul id="comments-list">
					<!-- Comments will render here -->
					<li><p>No Comments to show</p></li>
				</ul>
			</div>
			<div id="add-comment-area">
				<input type="text" id="new-comment-author" placeholder="Your name"> <span id="comment-error"></span><br>
				<textarea name="" id="new-comment-input" limit="400" cols="200" rows="2" placeholder="Thoughts?"></textarea><br>
				<input type="text" id="new-comment-passcode" class="tips" title="This box will contain the passcode for your comment. You'll need it if you want to delete your comment.">
				<button class="btn btn-inverse" id="submit-comment">Submit</button>
				<button class="btn btn-inverse" id="close-comment-modal">Close</button>
			</div>
		</div>

		<div id="passcode-modal">
			<div id="passcode-area">
				<input type="text" id="passcode-input" placeholder="passcode" /><br>
				<button class="btn btn-inverse" id="close-passcode-modal">Close</button><button class="btn btn-inverse" id="submit-passcode">Submit</button>
			</div>
		</div>
	</div>

	<script>randoms.thoughts({ thoughts: <%= JSON((@thoughts or {}).as_json).html_safe %> })</script>

<% end %>
